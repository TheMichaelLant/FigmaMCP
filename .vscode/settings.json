{
  // Enable Prettier extension
  "prettier.enable": true,

  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  "editor.tabSize": 2,
  "editor.insertSpaces": true,

  "markdownlint.config": {},

  "[markdown]": {
    "files.encoding": "utf8",
    "editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
  },

  // Consistent PowerShell formatting settings
  "powershell.codeFormatting.autoCorrectAliases": true,
  "powershell.codeFormatting.newLineAfterCloseBrace": true,
  "powershell.codeFormatting.pipelineIndentationStyle": "IncreaseIndentationForFirstPipeline",
  "powershell.codeFormatting.preset": "OTBS",
  "powershell.codeFormatting.trimWhitespaceAroundPipe": true,
  "powershell.codeFormatting.useConstantStrings": true,
  "powershell.codeFormatting.useCorrectCasing": true,
  "powershell.codeFormatting.whitespaceBetweenParameters": true,

  "[powershell]": {
    "files.encoding": "utf8bom",
    "editor.tabSize": 4,
    "editor.defaultFormatter": "ms-vscode.powershell"
  },

  // Modern ESLint settings
  "eslint.useFlatConfig": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],

  "[javascript][javascriptreact][typescript][typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    }
  },

  // Silent the stylistic rules in IDE that conflict with Prettier, but still auto fix them
  "eslint.rules.customizations": [
    {
      "rule": "@stylistic/*",
      "severity": "off"
    },
    {
      "rule": "prettier/*",
      "severity": "off"
    }
  ],

  // Vite-specific settings
  "typescript.preferences.quoteStyle": "single",
  "javascript.preferences.quoteStyle": "single",
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "typescript": "typescriptreact"
  },

  // Auto import settings for better Vite/React experience
  "typescript.suggest.autoImports": true,
  "javascript.suggest.autoImports": true,
  "typescript.preferences.includePackageJsonAutoImports": "auto",

  // Terminal settings for better Vite output
  "terminal.integrated.env.windows": {
    "FORCE_COLOR": "1"
  },

  // Debugging settings
  "debug.javascript.autoAttachFilter": "onlyWithFlag",
  "debug.terminal.clearBeforeReusing": true,

  // Spellright settings
  "spellright.language": ["en"],
  "spellright.documentTypes": ["markdown", "plaintext"],

  // File settings
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,

  "files.associations": {
    "*.env*": "dotenv"
  },

  // Hide unnecessary files and folders
  "files.exclude": {
    "**/.vs/": true,
    "**/.vscode/chrome-debug-profile/": true,
    "**/.vscode/edge-debug-profile/": true,
    "**/node_modules/": true,
    "**/*-lock.json": true,
    "**/.playwright-mcp": true
  },

  // Ignore unnecessary files and folders
  "search.followSymlinks": false,
  "search.exclude": {
    "**/.vs/": true,
    "**/.vscode/chrome-debug-profile/": true,
    "**/.vscode/edge-debug-profile/": true,
    "**/node_modules/": true,
    "**/*-lock.json": true,
    "**/.playwright-mcp": true
  }
}

